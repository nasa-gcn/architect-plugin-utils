{
  "name": "@nasa-gcn/architect-plugin-utils",
  "description": "Architect plugin utilities",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "github:nasa-gcn/architect-plugin-utils"
  },
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Leo Singer",
      "email": "leo.p.singer@nasa.gov"
    }
  ],
  "type": "module",
  "main": "index.js",
  "files": [
    "*.d.ts"
  ],
  "types": "index.d.ts",
  "scripts": {
    "prepare:husky": "husky",
    "prepare:esbuild": "esbuild src/index.ts --bundle --packages=external --platform=neutral --outfile=index.js",
    "prepare:tsc": "tsc",
    "prepare": "run-p prepare:*",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@nasa-gcn/eslint-config-gitignore": "^0.0.2",
    "@tsconfig/node18": "^18.2.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "eslintConfig": {
    "env": {
      "es2019": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@nasa-gcn/eslint-config-gitignore",
      "prettier"
    ],
    "overrides": [
      {
        "files": "*.ts",
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ]
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
