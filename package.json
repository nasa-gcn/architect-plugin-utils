{
  "name": "@nasa-gcn/architect-plugin-utils",
  "description": "Architect plugin utilities",
  "version": "0.4.0",
  "repository": {
    "type": "git",
    "url": "github:nasa-gcn/architect-plugin-utils"
  },
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Leo Singer",
      "email": "leo.p.singer@nasa.gov"
    }
  ],
  "type": "module",
  "main": "index.js",
  "files": [
    "*.d.ts"
  ],
  "types": "index.d.ts",
  "scripts": {
    "prepare:husky": "husky",
    "prepare:esbuild": "esbuild src/test.ts src/index.ts --bundle --packages=external --platform=neutral --outdir=.",
    "prepare:tsc": "tsc",
    "prepare": "run-p prepare:*",
    "test": "node --test"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@architect/utils": "^4.0.6",
    "@types/dockerode": "^3.3.37",
    "dockerode": "^4.0.5",
    "lodash": "^4.17.21",
    "typescript-event-target": "^1.1.1"
  },
  "devDependencies": {
    "@nasa-gcn/eslint-config-gitignore": "^0.0.2",
    "@tsconfig/node18": "^18.2.4",
    "@types/architect__utils": "^4.0.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "esbuild": "^0.25.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.0",
    "lint-staged": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "es2019": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@nasa-gcn/eslint-config-gitignore",
      "prettier"
    ],
    "overrides": [
      {
        "files": "*.ts",
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ]
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
